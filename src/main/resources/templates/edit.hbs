{{#partial "content"}}
    <body>
    <header>
        <div class="container">
            <div class="site-header">
                <a class="logo" href="/entries">SparkBlog</a>
                <a class="new-entry button button-round" href="/new"><i class="material-icons">create</i></a>
            </div>
        </div>
    </header>

    <div class="container">
                <div class="edit-entry">
                    <h2>Edit Entry</h2>
                    <form action="/edit/{{slug}}" method="post">
                        <label for="title">Title</label>
                        <input type="text" name="title" value="{{entry.title}}"><br>
                        <label for="text">Entry</label>
                        <textarea rows="5" name="text" placeholder="{{entry.text}}"></textarea>
                        <input type="submit" value="Save Entry" class="button">
                        <a href="/entries" class="button button-secondary">Cancel</a>
                    </form>
                </div>
            </div>
    <footer>
        <div>
            <a href="#">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
            <a href="#">Terms</a>
        </div>
    </footer>

    </body>
{{/partial}}

{{> base.hbs}}